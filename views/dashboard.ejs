<div class="container-fluid">
  <div class="row">
    <div class="col-md-6">
      <div class="column">
        <h1 class="fw-bold">Hey <%= username %>,</h1>
      </div>
    </div>
    <div class="col-md-6">
      <div class="column text-end">
        <a href="/add/notes/" class="btn btn-outline-custom-1" role="button">
          + Add Notes</a
        >
      </div>
    </div>
  </div>
  <div class="row">
    <% if (notes && notes.length > 0) { %> <% for (var i = 0; i < notes.length;
    i++) { %>
    <div class="col-sm-4 mb-4">
      <div class="card p-2 border-primary card-custom" >
        <a
          href="/dashboard/item/<%= notes[i]._id %>"
         
        >
          <h5 class="card-title"><%= notes[i].title %></h5>
          <h6 class="card-subtitle mb-2 text-muted">
            <%= notes[i].description %>
          </h6>
          <p class="card-text"><%= notes[i].body %></p>
        </a>
      </div>
    </div>
    <% } %> <% } else { %>
    <div class="row ms-3">
      <div class="col-md-3">
        <img src="img/human-1.svg" alt="Idea Image" class="img-fluid ms-lg-5" />
      </div>
      <div class="col-md-3">
        <div class="card bg-light p-4">
          <h5 class="card-title mb-3">
            Capture Your Ideas Before They Slip Away
          </h5>
          <p class="card-text mb-4">
            Don't let your brilliant ideas fade into oblivion. Record them down
            and turn them into reality. Start adding your notes now!
          </p>
          <a href="/add/notes" class="btn btn-custom">Start Note-taking</a>
        </div>
      </div>
    </div>
    <% } %>
  </div>
  <% if(notes.length > 0) { %>
    <nav aria-label="Page navigation example">
      <ul class="pagination justify-content-center mt-5">
        <% if(current == 1) { %>
          <li class="page-item"><a class="page-link" href="#">Previous</a></li>
        <% } else { %>
          <li class="page-item"><a class="page-link" href="/dashboard">First</a></li>
        <% }  %>
        <% var i = (Number(current) > 5 ? Number(current) - 4 : 1) %>
        <% if (i !== 1 ) { %>
          <li class="page-item"><a class="page-link" href="#">...</a></li>
        <% } %>
        <% for (; i <= (Number(current) + 4) && i <= pages; i++) { %>
          <% if(i == current ) { %>
            <li class="page-item"><a class="page-link" href="#"><%= i %></a></li>
          <% } else { %>
            <li class="page-item"><a class="page-link" href="/dashboard/?page=<%= i %>"><%= i %></a></li>
          <% } %>
          <% if(i == Number(current) + 4 && i < pages) { %>
            <li class="page-item"><a class="page-link" href="#">...</a></li>
          <% } %>
        <% } %>
        <% if (current == pages) { %>
            <li class="page-item disabled"><a class="page-link">Last</a></li>
        <% } else { %>
            <li class="page-item"><a href="/dashboard/?page=<%= pages %>" class="page-link">Last</a></li>
        <% } %>
      </ul>
    </nav>

  <% } %>
</div>
